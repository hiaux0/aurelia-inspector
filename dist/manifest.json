{
  "manifest_version": 2,
  "name": "Aurelia 2 Inspector",
  "version": "2.0.1",
  "description": "A Chrome plugin adding a new inspector pane to the Elements panel, providing Aurelia-specific information about selected elements.",
  "devtools_page": "devtools.html",
  "icons": {
    "16": "images/16.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "web_accessible_resources": ["browser-polyfill.js", "devtools.html", "devtools-background.html"],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["browser-polyfill.js", "build/contentscript.js"],
      "run_at": "document_start"
    }   ,
    {
      "all_frames": true,
      "matches": ["<all_urls>"],
      "js": ["build/detector.js"],
      "run_at": "document_start"
    }   

  ],
  "browser_action": {
    "default_icon": {
      "16": "images/16-GREY.png",
      "48": "images/48-GREY.png",
      "128": "images/128-GREY.png"
    },
    "default_title": "Aurelia 2 Devtools",
    "default_popup": "popups/missing.html"
  },
  "background": {
    "scripts": ["browser-polyfill.js", "build/background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": ["file:///*", "http://*/*", "https://*/*"]
}
